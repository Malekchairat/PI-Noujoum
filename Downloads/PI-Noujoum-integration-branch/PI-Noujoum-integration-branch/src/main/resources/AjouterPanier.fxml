<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterPanier" style="-fx-background-color: #000000;">
    <children>
        <VBox layoutX="50.0" layoutY="20.0" spacing="15.0">
            <children>
                <HBox spacing="20.0">
                    <Label text="ID Produit" style="-fx-text-fill: white;" />
                    <TextField fx:id="idProduit" prefWidth="200.0" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
                </HBox>

                <HBox spacing="20.0">
                    <Label text="ID Utilisateur" style="-fx-text-fill: white;" />
                    <TextField fx:id="idUser" prefWidth="200.0" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
                </HBox>

                <HBox spacing="20.0">
                    <Label text="Nombre de Produits" style="-fx-text-fill: white;" />
                    <TextField fx:id="nbrProduit" prefWidth="200.0" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
                </HBox>
            </children>
        </VBox>

        <Button fx:id="ajoutPanier" layoutX="150.0" layoutY="250.0" text="Ajouter Panier" onAction="#ajout" style="-fx-background-color: #FFEB3B; -fx-text-fill: black;"/>
        <Button fx:id="afficherPaniers" layoutX="300.0" layoutY="250.0" text="Afficher Paniers" onAction="#afficherPaniers" style="-fx-background-color: #FFEB3B; -fx-text-fill: black;"/>
    </children>
</AnchorPane>
