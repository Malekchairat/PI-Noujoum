<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #2E2E2E, #000000);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.addpromotioncontroller">

   <!-- Barre de navigation -->
   <HBox layoutX="0" layoutY="0" prefHeight="80.0" spacing="20" style="-fx-background-color: #1A1A1A; -fx-padding: 15; -fx-alignment: center-left;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <ImageView fx:id="logo" fitHeight="56.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="homeBtn" onAction="#goToHome" text="Accueil" styleClass="nav-button" />
      <Button fx:id="productsBtn" onAction="#goToProducts" text="Produits" styleClass="nav-button" />
      <Button fx:id="claimsBtn" onAction="#goToReclamations" text="Réclamations" styleClass="nav-button" />
      <Button fx:id="eventsBtn" onAction="#goToEvents" text="Événements" styleClass="nav-button" />
   </HBox>

   <!-- Contenu principal -->
   <VBox spacing="15" layoutX="50.0" layoutY="100.0" style="-fx-padding: 20; -fx-background-color: #181818; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 5);">

      <!-- Champ Code -->
      <HBox spacing="10">
         <Label text="Code" style="-fx-text-fill: white;" />
         <TextField fx:id="code" prefWidth="200.0" styleClass="input-field" />
      </HBox>

      <!-- Champ Pourcentage -->
      <HBox spacing="10">
         <Label text="Pourcentage" style="-fx-text-fill: white;" />
         <TextField fx:id="pourcentage" prefWidth="200.0" styleClass="input-field" />
      </HBox>

      <!-- Champ Expiration -->
      <HBox spacing="10">
         <Label text="Expiration" style="-fx-text-fill: white;" />
         <TextField fx:id="expiration" prefWidth="200.0" styleClass="input-field" />
      </HBox>

      <!-- Sélection du produit -->
      <HBox spacing="10">
         <Label text="Produit" style="-fx-text-fill: white;" />
         <ComboBox fx:id="produitComboBox" prefWidth="200.0" styleClass="input-field" />
      </HBox>

      <!-- Boutons d'action -->
      <HBox spacing="15" alignment="center">
         <Button fx:id="ajout" text="Ajouter" onAction="#ajout" styleClass="action-button"/>
         <Button fx:id="affich" text="Afficher" onAction="#Afficher" styleClass="action-button"/>
      </HBox>
   </VBox>
</AnchorPane>
