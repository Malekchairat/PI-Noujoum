<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ModifierCommande" style="-fx-background-color: #000000;">
    <children>
        <GridPane layoutX="50.0" layoutY="20.0" hgap="10.0" vgap="10.0" style="-fx-text-fill: white;">
            <Label text="ID Commande:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="ID User:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label text="ID Panier:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label text="Rue:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label text="Ville:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label text="Code Postal:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label text="État:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label text="Montant Total:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <Label text="Méthode Paiement:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>

            <TextField fx:id="txtIdCommande" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtIdUser" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtIdPanier" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtRue" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtVille" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtCodePostal" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtEtat" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtMontant" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            <TextField fx:id="txtMethodePaiement" GridPane.rowIndex="8" GridPane.columnIndex="1" style="-fx-background-color: #333333; -fx-text-fill: white;"/>

            <Button text="Modifier" onAction="#enregistrerModification" GridPane.rowIndex="9" GridPane.columnIndex="0" style="-fx-background-color: #FFEB3B; -fx-text-fill: black;"/>
            <Button text="Annuler" onAction="#fermer" GridPane.rowIndex="9" GridPane.columnIndex="1" style="-fx-background-color: #FFEB3B; -fx-text-fill: black;"/>
        </GridPane>
    </children>
</AnchorPane>
