<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane prefHeight="1200.0" prefWidth="1600.0" stylesheets="styles.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.afficheproduitcontroller">

    <children>
        <!-- ScrollPane for product display -->
        <ScrollPane fx:id="scrollPane" layoutX="50.0" layoutY="8.0" prefHeight="942.0" prefWidth="1540.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="900.0" prefWidth="1400.0">
                    <children>
                        <!-- TilePane with dark background and adjusted spacing -->
                        <TilePane fx:id="promoTilePane" hgap="30" layoutX="-52.0" layoutY="-10.0"
                                  prefHeight="1210.0" prefWidth="1566.0" style="-fx-background-color: #121212;" vgap="40">
                        </TilePane>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

        <!-- Buttons for adding and updating products -->
        <Button fx:id="ajout" layoutX="1250.0" layoutY="1000.0" mnemonicParsing="false" onAction="#ajout"
                style="-fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Ajouter un produit" />
        <Button fx:id="update" layoutX="1100.0" layoutY="1000.0" mnemonicParsing="false" onAction="#update"
                style="-fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Mettre Ã  jour" />

        <!-- Cart Icon Button (Properly Positioned) -->
        <Button fx:id="panier" layoutX="1400.0" layoutY="20.0" mnemonicParsing="false" onAction="#panier"
                style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/iconnn.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </children>
</AnchorPane>
