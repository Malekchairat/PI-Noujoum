<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterCommande" style="-fx-background-color: black;">
    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <HBox spacing="10.0">
                    <Label text="ID Panier" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="idPanier" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="Rue" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="rue" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="Code Postal" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="codePostal" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="Ville" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="ville" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="État" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="etat" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="Montant Total" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="montantTotal" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="Méthode de Paiement" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="methodePaiment" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>

                <HBox spacing="10.0">
                    <Label text="ID Utilisateur" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                    <TextField fx:id="idUser" prefWidth="250.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5px; -fx-padding: 5px;"/>
                </HBox>
            </children>
        </VBox>

        <VBox layoutX="150.0" layoutY="350.0" spacing="10.0">
            <children>
                <Button fx:id="ajout" text="Ajouter Commande" onAction="#ajout"
                        style="-fx-background-color: yellow; -fx-text-fill: black; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5px; -fx-min-width: 200px;" />

                <Button fx:id="afficher" text="Afficher Commandes" onAction="#afficherCommandes"
                        style="-fx-background-color: yellow; -fx-text-fill: black; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5px; -fx-min-width: 200px;" />

                <Button fx:id="ajouterPanier" text="Ajouter Panier" onAction="#ajouterPanier"
                        style="-fx-background-color: yellow; -fx-text-fill: black; -fx-font-weight: bold; -fx-border-radius: 5px; -fx-padding: 5px; -fx-min-width: 200px;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
